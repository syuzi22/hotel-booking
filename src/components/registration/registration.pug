.register
    .register__title.heading1 Регистрация аккаунта
    .register__name
        include ../../components/input-text/input-text.pug
        +inputText('text', 'Имя')
    .register__surname
        +inputText('text', 'Фамилия')
    .register__gender
        include ../../components/radio-buttons/radio-buttons.pug
        +radioButtons('Мужчина', 'Женщина')
    .register__birth
        include ../../components/masked-input/masked-input.pug
        +maskedInput('text', 'ДД.ММ.ГГГГ', 'дата рождения')
    .register__email
        +inputText('text', 'Email', 'Данные для входа в сервис')
    .register__password
        +inputText('text', 'Пароль')
    .register__toggle
        include ../../components/toggle/toggle.pug
        +toggle('Получать спецпредложения')
    .register__arrow-button
        include ../../components/arrow-button/arrow-button.pug
        +arrowButton({name: 'Перейти к оплате'})
    .register__sign-in
        span Уже есть аккаунт на Toxin
        include ../../components/button/button.pug
        +button({name: 'empty', text: 'Войти'})

