            .footer__icons
                .footer__icon
                    a(href='#')
                        i.fab.fa-twitter.fa-2x
                .footer__icon
                    a(href='#')
                        i.fab.fa-facebook-square.fa-2x
                .footer__icon
                    a(href='#')
                        i.fab.fa-instagram.fa-2x