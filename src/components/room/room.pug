mixin room(options)
    if !options
        - options = {}
    .room
        .room__slider
            each val in options.images
                div
                    img(src= val)
        .room__slider-arrows
            span.room-slider__prev expand_more
            span.room-slider__next expand_more
        .room__wrap
            .room__info
                span.room__numsign №
                span.room__number= options.number || ''
                span.room__cat.heading3= options.category || ''
                span.room__price= options.price || ''
                    span.room__day в сутки
            .room__line
            .room__rate
                .room__ratebutton
                    include /components/rate-button/rate-button.pug
                    +rateButton(options.rate)
                .room__reviews
                    span.room__reviewsnum= options.reviews || ''
                    span.room__reviewsword Отзывов
