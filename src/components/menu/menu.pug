mixin submenu(options)
    ul.menu__sub
        each item in options.items
            li.menu__item
                a(href='#')= item.name
mixin topmenu(options)
    nav.menu
        div.menu__gamburger
            i.fas.fa-bars.fa-3x
        ul.menu__top
            each item in options.items
                if item.isActive
                    li.menu__item
                        a.menu__item_active(href='#')= item.name
                else
                    li.menu__item    
                        a(href='#')= item.name
                        if item.items
                            span.menu__micons expand_more
                            +submenu(item)

