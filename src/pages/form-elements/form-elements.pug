html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Form Elements
    body
        div(class="form-elements__logo")
        div(class="form-elements")

            div(class="form-elements__first")
                div(class="form-elements__inputwrap")
                    include ../../components/input-text/input-text.pug
                    +inputText('email', 'Email', 'text field', 'default')
                div(class="form-elements__inputwrap2")
                    +inputText('text', 'This is pretty awesome', 'text field','hover / focus')(class="input-text__inp_focus")
                div(class="form-elements__guest-dropdownwrap")
                    include ../../components/guest-dropdown/guest-dropdown.pug
                    +guestDropdown('Dropdown', 'Default')
                div(class="form-elements__masked-input")
                    include ../../components/masked-input/masked-input.pug
                    +maskedInput('text', 'ДД.ММ.ГГГГ', 'masked text field', 'default')
                div(class="form-elements__date-dropdownwrap")
                    include ../../components/date-dropdown/date-dropdown.pug
                    +dateDropdown('date dropdown', 'date dropdown')
                div(class="form-elements__filterwrap")
                    include ../../components/filterdate-dropdown/filterdate-dropdown.pug
                    +filterDateDropdown('filter date dropdown')
                div(class="form-elements__subscription")
                    include ../../components/subscription/subscription.pug
                    +subscription('subscription text field')           

            div(class="form-elements__second")
                div(class="form-elements__checkbutwrap")
                    include ../../components/checkbox-buttons/checkbox-buttons.pug
                    +checkboxButtons('Checkbox Buttons', 'Можно курить', 'Можно с питомцами', ' Можно пригласить гостей (до 10 человек)')
                div.heading3 radio buttons 
                div(class="form-elements__radiowrap")
                    include ../../components/radio-buttons/radio-buttons.pug
                    +radioButtons('Мужчина', 'Женщина')
                div.heading3 toggle
                div(class="form-elements__toggle")
                    include ../../components/toggle/toggle.pug
                    +toggle('Получать спецпредложения')
                div.heading3 like button
                div(class="form-elements__like-button")
                    include ../../components/like-button/like-button.pug
                    +likeButton
                    +likeButton("like-button_clicked")
                div.heading3 rate button 
                div(class="form-elements__rate-button")
                    include ../../components/rate-button/rate-button.pug
                    +rateButton(3.5)
                    +rateButton(5)

            div(class="form-elements__third")
                div(class="form-elements__range-slider")
                    include ../../components/range-slider/range-slider.pug
                    +rangeSlider('range slider')
                div.heading3 buttons
                div(class="form-elements__buttons")
                    include ../../components/button/button.pug
                    div(class="form-elements__filled-button")
                        +button({name: 'filled'})
                    div(class="form-elements__empty-button")
                        +button({name: 'empty'})
                    div(class="form-elements__link-buttons")
                        +button({name: 'link_purple'})
                        +button({name: 'link_dark'})
                    div(class="form-elements__arrow-button")
                        include ../../components/arrow-button/arrow-button.pug
                        +arrowButton({name: 'Перейти к оплате'})
                div.heading3 pagination
                div(class="form-elements__pagination")               
                        include ../../components/pagination/pagination.pug
                        +pagination(15, 1)

            div(class="form-elements__2-1")
                div(class="form-elements__room-dropdown")
                    include ../../components/room-dropdown/room-dropdown.pug
                    +roomDropdown('Dropdown', 'Default', ' ', 2, 2)
                div
                    include ../../components/room-dropdown/room-dropdown.pug
                    +roomDropdown('Dropdown', 'Expanded', 'menu-open', 2, 2) 
                div(class="form-elements__expcheckwrap")
                    include ../../components/expand-checkbox/expand-checkbox.pug 
                    +expandCheckbox('expandable checkbox list', 1, 'Завтрак', 'Письменный стол', 'Стул для кормления', 'Кроватка', 'Телевизор','Шампунь')
                div(class="form-elements__expcheckwrap2")
                    include ../../components/expand-checkbox/expand-checkbox.pug 
                    +expandCheckbox('expandable checkbox list', 2, 'Завтрак', 'Письменный стол', 'Стул для кормления', 'Кроватка', 'Телевизор','Шампунь')
                
            div(class="form-elements__2-2")
                div
                    include ../../components/guest-dropdown/guest-dropdown.pug
                    +guestDropdown('Dropdown', ' ', 'menu-open')
                div(class="form-elements__richcheckwrap")
                    include ../../components/rich-checkbox/rich-checkbox.pug
                    +richCheckbox('Rich Checkbox Buttons', 'Широкий коридор', 'Ширина коридоров в номере не менее 91 см.', 'Помощник для инвалидов', 'На 1 этаже вас встретит специалист и проводит до номера.')
            
            div(class="form-elements__2-3")
                div
                    include ../../components/guest-dropdown/guest-dropdown.pug
                    +guestDropdown('Dropdown', ' ', 'menu-open', 2, 1)
                div(class="form-elements__bulletwrap")
                    include ../../components/bullet-list/bullet-list.pug
                    +bulletList('Bullet list', 'Нельзя с питомцами', 'Без вечеринок и мероприятий', 'Время прибытия — после 13:00, а выезд до 12:00')

            div(class="form-elements__info")
                include ../../components/room-info/room-info.pug
                +roomInfo({
                    icon: 'insert_emoticon',
                    title: 'Комфорт',
                    text: 'Шумопоглощающие стены'
                })
                .form-elements__line
                +roomInfo({
                    icon: 'location_city',
                    title: 'Удобство',
                    text: 'Окно в каждой из спален'
                })
                .form-elements__line
            
            div(class="form-elements__reviews")
                include ../../components/review/review.pug
                +review({
                    url: '/images/review-photo.png',
                    name: 'Мурад Сарафанов',
                    daysAgo: '5 дней назад',
                    text: `Великолепный матрас на кровати в основной спальне! 
                    А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. 
                    Выкрикивал комплименты повару — никто не жаловался из соседей.`
                })